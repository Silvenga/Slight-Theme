<main class="main" role="main">
    {{#post}}
    <article class="article">

        <div class="postheader">
            <div class="date">{{date format='dddd MMMM DD, YYYY'}}</div>
            <h1 class="posttitle">{{title}}</h1>
        </div>
        <div class="postcontent">
            {{content}}
        </div>

        {{#if author}}
        <div class="postfooter postcontent">
            {{#if author.image}}
            <div class="authorimage inline"><img src="{{author.image}}" /></div>
            {{/if}}

            <h4 class="authorname inline"><span>{{author.name}}</span></h4>

            {{#if author.website}}
            <div class="authorwebsite inline"><a href="{{author.website}}">{{author.website}}</a></div>
            {{/if}}
            <div class="authorbio">
                <p>{{author.bio}}</p>
            </div>
        </div>
        {{/if}}

    </article>
    {{/post}}

    <section class="post-comments">
    <!-- Duoshuo Comment BEGIN -->
    <div class="ds-thread"></div>
    <script type="text/javascript">
    var duoshuoQuery = {short_name:"9yu-blog"};
    (function() {
        var ds = document.createElement('script');
        ds.type = 'text/javascript';ds.async = true;
        ds.src = 'http://static.duoshuo.com/embed.js';
        ds.charset = 'UTF-8';
        (document.getElementsByTagName('head')[0] 
        || document.getElementsByTagName('body')[0]).appendChild(ds);
    })();
    </script>
    <!-- Duoshuo Comment END -->
    </section>


    {{> pagination}}
</main>
{{!< default}}